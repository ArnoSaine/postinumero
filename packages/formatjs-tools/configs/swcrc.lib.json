{
  "$schema": "https://swc.rs/schema.json",
  "jsc": {
    "parser": {
      "syntax": "typescript"
    },
    "transform": {
      "react": { "runtime": "automatic" }
    },
    "experimental": {
      "cacheRoot": "node_modules/.cache/swc",
      "plugins": [
        [
          "@swc/plugin-formatjs",
          {
            "preserveWhitespace": true,
            "removeDefaultMessage": true
          }
        ]
      ]
    }
  },
  "sourceMaps": true
}
