{
  "name": "@postinumero/root",
  "private": true,
  "license": "ISC",
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/*/test"
  ],
  "scripts": {
    "start": "npm start --workspace=packages --if-present",
    "build": "npm run build --workspace=packages --if-present",
    "test": "npm test --workspaces --if-present",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "**/package.json": "sort-package-json"
  },
  "devDependencies": {
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
